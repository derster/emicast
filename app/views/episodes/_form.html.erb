 <%= form_for ([@emission, @episode]), :html => {:multipart => true} do |f| %>

      <div class="field">
        <%= f.label :titre %><br />
        <%= @episode.errors[:title].first %>
        <%= f.text_field :title, class: "form-control" %>
      </div>
      <div class="field">
        <%= f.label :description %><br />
        <%= @episode.errors[:description].first %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :thumbnail %>
        <%= f.file_field :thumbnail  %>
      </div>

      <div class="field">
        <%= f.label :mp3 %>
        <%= f.file_field :mp3  %>
      </div>

      <div class="actions">
        <%= f.submit %>
      </div>

<% end %>