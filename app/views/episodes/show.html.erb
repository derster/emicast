<div class="container boxDchain2">

        <div class="col-md-8 boxEpisodeCh">
        <h2><%= @episode.title %></h2>
            <div class="boxEpisode boxEpOne">
                  <div class="imgBxEp">
                      <%= image_tag @episode.thumbnail.url(:medium), class:"img-responsive"%>
                  </div>

                  <div class="textEpiso">
                      
                      

                      <%= @episode.description %>

                      <p class="date"><i class="glyphicon glyphicon-time"></i>Publié le <%= @episode.created_at %></p>

                  </div>

                  <div class="clear"></div>
            </div>

        </div>



        <div class="col-md-4 boxEmisChain">

        <h2>Autres episodes</h2>

          <% @episodes.each do |episode| %>

            <div class="boxEpisode boxEpOne">
              <%= link_to emission_episode_path(@emission, episode) do %>

                  <div class="imgBxEpL">

                      <%= image_tag episode.thumbnail.url(:medium), width:"120" %>

                  </div>

                  <div class="textBx textShowEp">
                      
                      <h3><%= episode.title %></h3>

                      <p class="date"><i class="glyphicon glyphicon-time"></i>Publié le <%= episode.created_at %></p>

                  </div>

                  <div class="clear"></div>
              <% end %>
            </div>

            <% end %>

        </div>

    </div>




    <div id="jquery_jplayer_1" class="jp-jplayer"></div>
     <div id="jp_container_1" class="jp-audio">
      <div class="jp-type-single">
        <div class="jp-gui jp-interface">
          <ul class="jp-controls">
             <li><a href="Javascripts:;" class="jp-play" tabindex="1"> <span class="btn-play"><%= image_tag("play.png") %></span></a></li>
            <li><a href="Javascripts:;" class="jp-pause" tabindex="1"><span class="btn-pause"><%= image_tag("pause.png") %></span> </a></li>
            <li><a href="Javascripts:;" class="jp-mute" tabindex="1" title="mute"><span class="btn-mute"><%= image_tag("mute.png") %></span></a></li>
             <li><a href="Javascripts:;" class="jp-unmute" tabindex="1" title="unmute"><span class="btn-mute"><%= image_tag("unmute.png") %></span></a></li>
          </ul>
          <div class="jp-progress">
            <div class="jp-seek-bar">
              <div class="jp-play-bar"></div>
            </div>
          </div>

           <div class="jp-time-holder">
            <div class="jp-current-time"></div>
          </div>
          <div class="jp-volume-bar">
            <div class="jp-volume-bar-value"></div>
          </div>
        </div>
      </div>
     </div>


<script>
 $(document).ready(function() {
   $("#jquery_jplayer_1").jPlayer({
       ready: function(){
         $(this).jPlayer("setMedia", {
           mp3: "<%= @episode.mp3 %>",
         }).jPlayer("play");
       },
        
       swfPath: "/js",
       supplied: "mp3",
     });
 });
</script>