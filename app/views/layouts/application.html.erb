<!DOCTYPE html>
<html>
<head>
  <title>Emicast</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      
      <%= link_to "Emicast.com", root_path, class: "navbar-brand" %>

    </div>
    <div id="navbar" class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li><a href="#">Musique</a></li>
        <li><a href="#">Sports</a></li>
        <li><a href="#">Actualités</a></li>
        <li><a href="#">Divertisemnts</a></li>

		<% unless admin_signed_in? %>
			<li><%= link_to "Inscription", registration_path %></li>
			<li><%= link_to "Connexion", login_path %></li>

		<% else %>
			<li><%= link_to "Deconnexion", destroy_admin_session_path, method: :delete, data:{confirm:"Are you sure?"} %></li>
		<% end %>
      </ul>
    </div><!--/.navbar-collapse -->
  </div>
</nav>

<% if alert %>
  <div id="notice_wrapper">
      <p class="alert"><%= alert %></p>
  </div>
<% end %>
<% if notice %>
  <div id="notice_wrapper">
      <p class="notice"><%= notice %></p>
  </div>
<% end %>

<%= yield %>

<footer class="footer">
  <div class="container">
    <p>© 2015 Ti.co, Inc. </p>

  </div>
</footer>

</body>
</html>
