<% provide(:title, "Inscription - Emicast") %>
<div class="container boxFormB">

<div class="boxForm">

        <h2>Inscription</h2>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="field">
            <%= f.label :nom %><br />
            <%= f.text_field :nom, autofocus: true, class: "form-control", required:true %>
          </div>

          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, class: "form-control", required:true %>
          </div>

          <div class="field">
            <%= f.label :nom_radio %><br />
            <%= f.text_field :nom_radio, class: "form-control", required:true %>
          </div>

          <div class="field">
            <%= f.label :bande_fm %><br />
            <%= f.text_field :bande_fm, class: "form-control", required:true  %>
          </div>

          <div class="field">
            <%= f.label :logo_radio %>
            <%= f.file_field :logo_radio  %>
          </div>

          <div class="field">
            <%= f.label :cover_radio %>
            <%= f.file_field :cover_radio  %>
          </div>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>

          <div class="actions">
            <%= f.submit "Envoyer" %>
          </div>
        <% end %>
</div>

<div class="bForm">
  <%= render "devise/shared/links" %>

</div>


</div>
